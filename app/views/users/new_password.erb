<div id="new-schit">	
	<form action="/users/reset_password" method="post">
		<input name="email" type="text" value=<%= @user.email %> readonly >
		<input name="password" type="password" placeholder="New Password">
		<input name="password_confirmation" type="password" placeholder="Confirm New Password">
		<input name="token" type="hidden" value=<%= @user.password_token %> >
		<input type="submit" value="Update">
	</form>
</div>
